{
  "name": "Scala Development",
  "exposedPorts": [
    4242
  ],
  "forwardPorts": [
    4242
  ],
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "scalameta.metals",
        "ms-azuretools.vscode-docker",
        "github.vscode-github-actions"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          }
        },
        "java.configuration.updateBuildConfiguration": "automatic",
        "java.compile.nullAnalysis.mode": "automatic",
        "metals.javaHome": "/opt/java/openjdk",
        "metals.sbtScript": "/root/.local/share/coursier/bin/sbt",
        "metals.scalafmtConfigPath": ".scalafmt.conf",
        "metals.scalafixConfigPath": ".scalafix.conf",
        "metals.serverVersion": "1.6.1",
        "metals.serverProperties": [
          "-Xmx2G",
          "-Xms1G"
        ],
        "java.import.gradle.enabled": false,
        "java.import.maven.enabled": false,
        "java.server.launchMode": "Standard",
        "scalafmt.configPath": ".scalafmt.conf",
        "scalafix.configPath": ".scalafix.conf"
      }
    }
  },
  "mounts": [
    "source=coursier-cache-torrent,target=/root/.cache/coursier,type=volume",
    "source=vscode-extensions-torrent,target=/root/.vscode-server/extensions,type=volume",
    "source=vscode-data-torrent,target=/root/.vscode-server,type=volume",
    "type=bind,source=/var/run/docker.sock,target=/var/run/docker.sock"
  ],
  "remoteUser": "root",
  "runArgs": [
    "--init",
    "--dns=8.8.8.8",
    "--dns=8.8.4.4"
  ],
  "containerEnv": {
    "HTTPS_PROXY": "",
    "HTTP_PROXY": "",
    "NO_PROXY": "localhost,127.0.0.1"
  }
}